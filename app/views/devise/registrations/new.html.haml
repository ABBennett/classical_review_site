%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs.review-form-title
    = f.input :username, label: "Username", required: true, autofocus: true
    = f.input :email, required: true, autofocus: true
    = f.input :profile_photo, type: :file
    = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    = f.input :password_confirmation, label: "Password Confirmation", required: true
  .form-actions
    = f.button :submit, "Sign Up"
%p#link= render "devise/shared/links"
